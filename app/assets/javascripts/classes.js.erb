/* CLASS AND METHODS FOR IMAGE CHANGING DOTS */

//class for sitewide use of image-changing dots
function dotImageCycle() {
	this.isOperating = false;
	this.previous;
	this.intvlSet = false;
	//this.timer = setTimeout(dotImageCycle.autoChange(), 4000); 
}
dotImageCycle.prototype.startupSeq = function(firstImg, firstListItem) {
	firstImg.addClass('nowShowing').fadeIn(500); //pass in the first image and list item to this function
	firstListItem.addClass('selected');
}
dotImageCycle.prototype.curtainCall = function(lastOne, nextOne) {
	lastOne.removeClass('nowShowing').fadeOut(400, function() { nextOne.addClass('nowShowing').fadeIn(400);	});
}
dotImageCycle.prototype.changeDots = function(before, after) {
	before.removeClass('selected');
	after.addClass('selected');
}
