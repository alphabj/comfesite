#prod_identity { 
	height: 55px;
}

#product_details_links {
	width: 950px;
	margin: 0 auto;
	padding-bottom: 10px;
	background: url(<%= asset_path 'gradient_top.jpg' %>) bottom center no-repeat;
	a { 
		margin-right: 20px;
		font-size: .9em;
		font-weight: 200;
		font-style: normal;
		color: #999999;
	} a:hover, a.selected { color: #555555; }
}

#armsdesign, #armsfeatures {
	width: 950px;
	margin: 0 auto;
	
	div {
		height: 650px;
		background: url(<%= asset_path 'main_div_border.png' %>) bottom center no-repeat;
		margin-bottom:70px;

		h1, h2, span, div { position: relative; z-index: 1; }

		h1 {
			text-align: left;
			font-size: 2.8em;
			margin-bottom: 5px;
		}
		h2 {
			font-size: 1.8em;
			color: #61b6da;
			margin-bottom: 30px;		
		}
		span.aside {
			display: block;
			position: absolute;

			h3 {
				font-size: 1.5em;
				color: #555555;
				margin-bottom: 5px;
			}
			p {
				font-size: 1em;
				color: #333333;
				line-height: 1.2em;
			}
		}
		div.icons { 
			height: 90px !important; 
			margin-bottom: 0;
			background: url(<%= asset_path 'main_div_border.png' %>) bottom left no-repeat;
			padding: 20px 25px 25px 50px;

			h3, p { clear: none; margin-left: 150px;} 
			h3{
				font-size: 1.5em;
				font-weight: bold;
				color: #555555;
			}
			p { 
				font-size: 1em;
				color: #767676;
				line-height: 1.2em;		
			}
			span.icon { 
				background-image:url(<%= asset_path 'featureicons.png' %>);
				background-repeat: no-repeat;
				width: 90px;
				height: 90px;
				float: left;
				display: block;
			}
			#comfort{ background-position: -3px 0; }
			#touchthrough{ background-position: -3px -113px; }
			#novelcro{ background-position: -6px -226px; }
			#moisture { background-position: -3px -339px; }
			#silver{ background-position: -3px -452px; }
			#layered{ background-position: -3px -565px; }
			#durable{ background-position: -3px -678px; }
			#safety{ background-position: -3px -791px; }
		}div.closingicon { background: none;}
	}

	.closingdiv { margin-bottom: 0;}
	.closinglinks { 
		height: 50px;
		background: none;
		margin-top: 20px;
		a { 
			display: block;
			width: 100%;
			text-align: center;
		}
		a:hover { font-style: italic;}
	}

}

#armsdesign { 
	div { 
		img { 
			z-index: 0; 
			position: absolute; 
			top: 0; 
			left: 0;
		} 
	} 
}
#armsfeatures { 
	div { 
		height: auto; 
		padding-bottom: 50px; 
	} 
}

