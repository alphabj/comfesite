@charset "UTF-8";
/* Product Details */

$h1color: #61b6da;
$h2color: #2E2E2E;

#prod_identity { 
	height: 125px; 
	background: url(<%= asset_path 'gradient_top.jpg' %>) bottom center no-repeat;
}

#product_details_links {
	width: 222px;
	margin: 0 auto;
	padding-top: 10px;
	
	a { 
		margin-right: 20px;
		font-size: .8em;
		font-weight: 100;
		font-style: normal;
		color: #999999;
	} a:hover, a.selected { color: #555555; }
}

#armsdesign, #armsfeatures, #armsspecs, #sizinguide {
	width: 950px;
	margin: 40px auto 0 auto;
	
	div {
		min-height: 600px;
		background: url(<%= asset_path 'main_div_border.png' %>) bottom center no-repeat;

		h1, h2, span, div { position: relative; z-index: 1; }

		h1 { font-size: 2.5em; margin-bottom: 5px; color: $h1color; }
		h2 { font-size: 1.8em; color: $h2color; margin-bottom: 30px; }
		span.aside {
			display: block;
			position: absolute;

			h3 {
				font-size: 1.5em;
				color: #555555;
				margin-bottom: 5px;
			}
			p {
				font-size: 1em;
				color: #333333;
				line-height: 1.2em;
			}
		}
		div.icons { 
			min-height: 90px !important; 
			margin-bottom: 0;
			background: url(<%= asset_path 'main_div_border.png' %>) bottom left no-repeat;
			padding: 20px 25px 25px 50px;

			h3, p { clear: none; margin-left: 150px;} 
			h3{
				font-size: 1.5em;
				font-weight: bold;
				color: #555555;
			}
			p { 
				font-size: 1em;
				color: #767676;
				line-height: 1.2em;		
			}
			span.icon { 
				background-image:url(<%= asset_path 'featureicons.png' %>);
				background-repeat: no-repeat;
				width: 90px;
				height: 90px;
				float: left;
				display: block;
			}
			#comfort{ background-position: 0px 0; }
			#touchthrough{ background-position: 0px -113px; }
			#novelcro{ background-position: 0px -226px; }
			#moisture { background-position: 0px -310px; }
			#silver{ background-position: 0px -208px; }
			#layered{ background-position: 0px -412px; }
			#durable{ background-position: 0px -105px; }
			#safety{ background-position: 0px 0px; }
		}div.closingicon { background: none;}
	}

	.nobkg { background: none; }
	.closingdiv { margin-bottom: 0;}
	.closinglinks { 
		min-height: 50px;
		height: 50px;
		background: none;
		margin-top: 20px;
		a { 
			display: block;
			width: 100%;
			text-align: center;
		}
		a:hover { font-style: italic;}
	}

}

#armsdesign { 
	div { 
		img { 
			z-index: 0; 
			position: absolute;  
			top:150px; 
			left:60px;
		} 
	} 
}
#armsfeatures { 
	div { 
		h1 { text-align: center; }
		min-height: auto;
		height: auto;
		padding-bottom: 50px; 
	} 
}

#armsfeatures.frontpage { 
	margin-top: 50px; 
	div {
		.tinyfeats { 
			height: 25px;
			background: url(<%= asset_path 'main_div_border.png' %>) top center no-repeat;
			a { 
				display: block; 
				margin-left: 55px; 
				padding-top: 25px; 
				height: 35px;
				background-image: url(<%= asset_path 'tinyfeats.png' %>);
				background-position: 490px 18px;
				background-repeat: no-repeat;
			}
			a:hover { font-style: italic; }
		}
	}
}

#armsdesign.frontpage {
	margin-top: 0px; 
	div { margin-bottom: 20px; }
}

