@charset "UTF-8";
/* Header */

/****HEADER****/

#header { min-height: 80px; }

#topBar 
{
width: 100%;
height: 48px;
background: url(<%= asset_path 'top_bar.png' %>) top left repeat-x;
}

#topBar span
{
display: block;
width: 950px;
margin: 0 auto;
overflow: auto;
position: relative;
}

#topBar span a
{
display: block;
float: left;
height:	46px;
margin-top: 2px;
margin-right: 20px;
background-image: url(<%= asset_path 'top_bar_links.png' %>);
}

#topBar span a#home 
{
background-position: 0 -2px;
background-repeat: none;
width: 100px;
margin-right: 35px;
}

#topBar span a#hands
{ 
background-position: -135px 0;
background-repeat: none;	
width: 100px;
} #topBar span a#hands:hover { background-position: -842px 0; }

#topBar span a#fingers
{ 
background-position: -278px 0;
background-repeat: none;	
width: 100px;
} #topBar span a#fingers:hover { background-position: -985px 0; }

#topBar span a#thumbs
{ 
background-position: -419px 0;
background-repeat: none;	
width: 100px;
} #topBar span a#thumbs:hover { background-position: -1125px 0; }

#topBar span a#arms
{ 
background-position: -562px 0;
background-repeat: none;	
width: 100px;
}
#topBar span a#arms:hover { background-position: -1269px 0; }

/****END HEADER****/