@charset "UTF-8";
/* Header */

#header { min-height: 80px; }

#topBar {
	width: 100%; height: 48px; background: url(<%= asset_path 'top_bar.png' %>) top left repeat-x;

	span {
		display: block; width: 950px; margin: 0 auto; overflow: auto; position: relative;
		
		a {
			display: block;
			float: left;
			height:	46px;
			width: 100px;
			margin-top: 2px;
			margin-right: 20px;
			background-image: url(<%= asset_path 'top_bar_links.png' %>);
		}	

		a#home { background-position: 0 -2px; background-repeat: none; margin-right: 35px; }
		
		a#hands { background-position: -135px 0; background-repeat: none; } 
		a#hands:hover { background-position: -842px 0; }

		a#fingers { background-position: -278px 0; background-repeat: none;	} 
		a#fingers:hover { background-position: -985px 0; }

		a#thumbs { background-position: -419px 0; background-repeat: none; } 
		a#thumbs:hover { background-position: -1125px 0; }

		a#arms { background-position: -562px 0; background-repeat: none; } 
		a#arms:hover { background-position: -1269px 0; }
	}
}


