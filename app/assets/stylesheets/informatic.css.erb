@charset "UTF-8";
/* Informatic Pages */

div.informatic
{
margin: 0 auto;
width: 950px;
margin-bottom: 150px;
padding-bottom: 50px;
background: url(<%= asset_path 'h_btm_rpt.png' %>) bottom left repeat-x;
}

.informatic h1
{
font-size: 2.7em;
font-weight: 600;
margin-bottom: 100px;
background: url(<%= asset_path 'h_btm_rpt.png' %>) bottom left repeat-x;
color: #373633;
text-align: right;
}

.secondarytitle { margin-bottom: 80px; clear: both; overflow: auto; }
.secondarytitle h2
{
padding-left: 20px;
font-size: 3em;
font-weight: 500;
background: url(<%= asset_path 'h_btm_rpt.png' %>) bottom left repeat-x;
}
.secondarytitle h2, .secondarytitle h2 a { color: #535353; }
.secondarytitle h2 a:hover { color: #55a3c5; }

.secondarytitle span
{
margin-left: 30px;
margin-top: 30px;
display: block;
float: left;
}
.secondarytitle span a, .secondarytitle span p { margin: 15px 0; }
.secondarytitle span a:hover { color: #535353; }

.secondarytitle span p 
{ 
font-size: 1.2em; 
color: #535353; 
line-height: 1.4em;
}

.secondarytitle span.stacked p a 
{
display: inline;
margin: 0;	
}

.secondarytitle span span.date
{
display: inline;
margin-left: 15px;
margin-top: 0; 
float: none;
}