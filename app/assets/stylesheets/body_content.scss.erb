div#headline { 
	width: 950px; margin: 0 auto; 

	img.carousel { 
		display: none; 
	}

}

#main_line { margin: 20px 0 50px 320px; }
#main_img { margin: 0 0 40px 50px; }

#message h1
{
margin-top:		25px;
font-size:		2.8em;
font-weight:	bold;
color:			#373633;
}

.slideshow
{
margin:			50px auto 90px auto;
width:			85px;
display: 		block;

	li {
		float:			left;
		display:		block;
		list-style-type:none;
		cursor:			pointer;
		width:			15px;
		height:			15px;
		background-image: url(<%= asset_path 'dot_block.png' %>);
		background-position: -40px 0;
		background-repeat: no-repeat;
		margin-right:	17px;
	}

	li:hover { 
		background-image: url(<%= asset_path 'dot_block.png' %>);
		background-position: -59px 0;
		background-repeat: no-repeat;
	}

	li.selected 
	{ 
		background-image: url(<%= asset_path 'dot_block.png' %>);
		background-position: -78px 0;
		background-repeat: no-repeat;
	}
}


#detail_links
{
	width:			535px;
	height:			137px;
	margin:			0 auto;
	clear:			both;

	a { 
		float:			left; 
		height:			70px;
		display:		block;
	}

	a#features { 
		background-image: url(<%= asset_path 'detail_block.png' %>);
		background-position: -23px -10px;
		background-repeat: no-repeat; 
		width:			178px;
	}

	a#features:hover {
		background-image: url(<%= asset_path 'detail_block.png' %>);
		background-position: -617px -10px;
		background-repeat: no-repeat; 
	}

	a#design { 
		background-image: url(<%= asset_path 'detail_block.png' %>);
		background-position: -209px -10px;
		background-repeat: no-repeat;  
		width:			172px;
	}

	a#design:hover { 
		background-image: url(<%= asset_path 'detail_block.png' %>);
		background-position: -805px -10px;
		background-repeat: no-repeat; 
	}

	a#everyone { 
		background-image: url(<%= asset_path 'detail_block.png' %>);
		background-position: -394px -10px;
		background-repeat: no-repeat;
		width:			185px;
	}

	a#everyone:hover { 
		background-image: url(<%= asset_path 'detail_block.png' %>);
		background-position: -991px -10px;
		background-repeat: no-repeat; 
	}
}