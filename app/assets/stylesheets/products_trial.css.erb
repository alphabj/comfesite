@charset "UTF-8";
/* Product Pages */

#topBar { background: url(<%= asset_path 'top_bar_prod.png' %>) top left repeat-x; }
#prod_identity { width: 950px; z-index: 1; }
#prod_identity img#prod_logo { margin-left: 645px; margin-top: 40px; }
#prod_identity h4#price 
{ 
right: -55px; 
top: 136px;
font-size: 1.2em; 
font-weight: 100; 
font-family:Arial, Helvetica, sans-serif; 
color: #676767; 
}
p#social_comment 
{ 
top: 120px; left: 5px; 
font-weight: 100;
font-family:Arial, Helvetica, sans-serif;
color: #434343;
}
ul#socials
{
margin-top: 25px;
width: 600px;
height: 40px;
display: none;
}
ul#socials li
{
width: 28px;
height: 28px;
list-style-type: none;
display: inline-block;
cursor: pointer;
margin-right: 7px;
background-image: url(<%= asset_path 'profile_pics.png' %>);
background-repeat: no-repeat;
} ul#socials li:hover { background-image: url(<%= asset_path 'profile_pics_hov.png' %>); background-repeat: no-repeat; } 


#prod_display { min-height: 520px; }
#prod_selections 
{ 
width: 176px;
z-index: 2;
top: 40px;
}
a.selection
{
background-image: url(<%= asset_path 'selections.png' %>);
background-repeat: none;
width: 176px;
height: 130px;
display: inline-block;
margin-bottom: 45px;
border-radius: 5px;
}
a.selection:hover { 
box-shadow: 0px 0px 15px #CCC; 
-moz-box-shadow:    0px 0px 15px #CCC;
-webkit-box-shadow: 0px 0px 15px #CCC;
}

img#prod_bkg_img
{
display: block;
margin: 0 auto 0 20px;
z-index: 0;
}

#body h1
{ 
text-align: center;
font-size: 2.5em;
color: #2E2E2E;
margin-top: 10px;
margin-bottom:40px;
}

div#prod_sections
{
width: 793px;
margin: 50px auto 100px auto;
overflow: auto;
}

#prod_sections span
{
text-align: center;
background: #efefe8;
border: #ffffff 6px solid;
border-radius: 5px;
margin: 5px 65px 5px 0;
width: 125px;
height: 70px;
-moz-box-shadow:    0px 0px 4px 0px #ccc;
-webkit-box-shadow: 0px 0px 4px 0px #ccc;
box-shadow:         0px 0px 4px 0px #ccc;
display: inline-block;
}
#prod_sections span a
{
line-height: 70px;
font-size: .9em;
color: #808080;
padding: 0 5px;
display: block;
}
#prod_sections span a:hover { color: #42413f; }

div#prod_config 
{
width: 100%;
height: 100%;
margin-left: 30px;
opacity: 0;
top: 0;
}
div.configs 
{
display: inline-block;
margin-bottom: 20px;
}
div.configs a 
{ 
display: inline-block; 
margin-right: 10px; 
height: 50px; 
width: 160px; 
border: 1px solid #999; 
clear: none; 
}
#band_color, #band_reflect {  }
#band_color {  }
#band_reflect { }


#final_creation 
{  
width: 100%;
height: 300px;
background: #999;
border: 1px solid #CCC;
border-radius: 4px;
}
div#config_nav { }
div#config_nav a 
{
display: inline-block; 
margin-right: 20px; 
height: 25px;
line-height: 25px;
width: 100px;
}
#select_helper   /*Add Gradient backgrounds*/
{
padding: 0 10px;
height: 50px;
top: -15px;
left: 295px;	
border: 7px solid #BCCFF9;
background: #D0DAFF;
border-radius: 10px;
font-size: 1.5em;
text-align: center; 
color: #1D74AE;
font-weight: bold;
line-height: 50px;
display: none;
}
#select_helper img { display: none; }
#larrow 
{
left: -56px;
top: 30px;	
}
#rarrow
{
right: -56px;
top: 30px;	
}

div#showcase
{
width: 950px;
margin: 0 auto;
overflow: auto;
}
div#showcase span
{
display: block;
width: 100%;
min-height: 300px;
position: relative;
background: url(<%= asset_path 'section_top_grad.png' %>) top center no-repeat;
}
div#showcase span h1
{
padding: 40px 0 0 0;
font-size: 1.8em;
font-family: Arial, Helvetica, sans-serif;
font-weight: 600;
color: #079fdf;
text-align: center;
}
div#showcase span span.showcase_detail
{
position: absolute;
background: none;
min-height:100px;
}
span.showcase_detail h3 { font-size: 1.6em; }
span.showcase_detail p { margin-top: 15px; font-size: 1em; }

div#prod_connections
{
width: 504px;
height: 115px;
margin: 70px auto 60px auto;
overflow: auto;	
}
span.prod_connection
{
text-align: center;
border: #ffffff 6px solid;
border-radius: 5px;
margin: 5px;
width: 125px;
height: 70px;
-moz-box-shadow:    0px 0px 4px 0px #ccc;
-webkit-box-shadow: 0px 0px 4px 0px #ccc;
box-shadow:         0px 0px 4px 0px #ccc;
display: block;
}
span#storemap { background: url(<%= asset_path 'store_map.png' %>) top left no-repeat; }
span#ordernow { background: url(<%= asset_path 'serving_platter.png' %>) top center no-repeat #efefe8; }

span.prod_connection a
{
font-size: .9em;
color: #808080;
padding: 85px 5px 0 5px;
display: block;
}
span.prod_connection a:hover { color: #42413f; }

