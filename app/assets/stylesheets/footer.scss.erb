@charset "UTF-8";
/* Footer */

#footer {
	background:	url(<%= asset_path 'foot_bdr_top.png' %>) top left repeat-x;
	min-height:	170px;	
	color: #859da7;
}


#foot_links {
	height:	85px;
	background-image:url(<%= asset_path 'footlinks_bkg.png' %>);
	background-position: 830px 0;
	background-repeat: repeat-y;

	h3 { top: 34px; left: 5px; }
}


#page_links { 
	padding-top: 34px; margin-left: 10px; 

	a { margin-right: 20px; color: #808080; font-size: .9em; }
	a:hover { color: #474747; }
}


div#location {
	color: #708a95;
	font-size: .75em;
	top: 38px;
	right: 140px;
} 


#flag { top: 26px; right: 50px; }


img#logo { margin: 10px 15px 15px 15px; }


div#about { 
	width: 960px; 

	div#top {
		background: 	url(<%= asset_path 'about_bkg_top.png' %>) top left no-repeat;
		height:			5px;
	}
	div#mid {
	background: 	url(<%= asset_path 'about_bkg_mid.png' %>) top left repeat-y;
	min-height:		6px;
	overflow:		auto;
		p {
			width:			39%;	
			display:		inline;
			font-size:		12px;
			padding:		17px 15px 15px 15px;
			text-shadow:	#eff4f7 1px 1px 1px;
			font-family:	Helvetica, sans-serif;
			color:			#849da7;
			line-height:	1.4em;
		}
	}
	div#btm {
		background: 	url(<%= asset_path 'about_bkg_btm.png' %>) bottom left no-repeat;
		height:			5px;
	}

}


#credits {
	min-height:	125px;
	font-size:	.7em;
	margin-top:	16px;
	font-family: Helvetica, sans-serif;
	color: #849da7;

	p {
		width: 370px;	
		padding-left: 3px;
		text-shadow: #eff4f7 1px 1px 1px;
		font-family: Helvetica, sans-serif;
		line-height: 1.4em;
	}

	span a { 
		float: left; 
		margin-right: 10px; 
		font-size: .7em;
		text-shadow: #eff4f7 1px 1px 1px;
		color: #849da7;
	}
}