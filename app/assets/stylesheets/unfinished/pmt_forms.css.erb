@charset "UTF-8";
/* Payment Forms */

#simplepayment-form { margin-top: 15px; }

.form-section { display: none; }

.form-row { margin-bottom: 5px;}

.form-row span { display: inline; }

#simplepayment-form label, #simplepayment-form input { display: inline-block; }

#simplepayment-form label { 
font-size: .9em;
}

#simplepayment-form input
{
margin-left: 10px;
border: 2px solid #BDCEE3;
border-radius: 5px;
font-size: 1.2em;	
}

#simplepayment-form button
{
font-size: 1.2em;
padding: 5px;
background: none;
border: 2px solid #BDCEE3;
border-radius: 5px;
right: 0; 
top: -50px;
cursor: pointer;
}

#config_count 
{
font-size: 1.2em;
color: #999;
padding: 0 5px;
}

.configs label
{
line-height: 50px;
font-size: 1.2em;
color: #999;
margin-right: 5px;	
}

#card_details .form-row
{
display: inline-block;
margin-right: 10px;
}

#simplepayment-form, #form_instruction, #customer_details, #altship
{
display: none;
}

#form_instruction {margin-top: 15px;}

div.names { width: 30%; }
div.names input { width: 180px; }
div.address { width: 67%; } 
.inlinerow { margin-right: 20px; display: inline-block; }
.addressinput { width: 80%; }

#diff_ship 
{
right: 90px;
top: -40px;	
}
#new_shipping { margin-right: 5px; }