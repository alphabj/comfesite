/* Product Pages */

#topBar { background: url(<%= asset_path 'top_bar_prod.png' %>) top left repeat-x; }

#prod_identity { 
	width: 950px; z-index: 1;  margin-top: 40px; margin-bottom: 20px; oveflow: auto;
	
	h4#price { 
		right: -55px; 
		top: 136px;
		font-size: 1.2em; 
		font-weight: 100; 
		font-family:Arial, Helvetica, sans-serif; 
		color: #676767; 
	}

}

img#prod_logo { top: 0; right: 0;}
/* img#prod_logo { margin-left: 645px; margin-top: 40px; } */

#coming_soon { top: 60px; right: 0; color: #2E2E2E; }


#prod_display { min-height: 470px; } /* #prod_display { min-height: 520px; } */

img#prod_bkg_img { display: block; margin: 0 auto; padding-top: 120px; z-index: 0; }

#body h1 { text-align: center; font-size: 2.5em; color: #2E2E2E; margin-top: 10px; margin-bottom:40px; }


#prod_selections { width: 176px; z-index: 2; top: 40px; }

a.selection {
	background-image: url(<%= asset_path 'selections.png' %>);
	background-repeat: none;
	width: 176px;
	height: 130px;
	display: inline-block;
	margin-bottom: 45px;
	border-radius: 5px;
}
a.selection:hover { 
	box-shadow: 0px 0px 15px #CCC; 
	-moz-box-shadow:    0px 0px 15px #CCC;
	-webkit-box-shadow: 0px 0px 15px #CCC;
}

div#prod_sections { 
	width: 551px; padding-left: 2px; 

	span {
		text-align: center;
		background: #efefe8;
		border: #ffffff 6px solid;
		border-radius: 5px;
		margin: 5px 65px 5px 0;
		width: 125px;
		height: 70px;
		-moz-box-shadow:    0px 0px 4px 0px #ccc;
		-webkit-box-shadow: 0px 0px 4px 0px #ccc;
		box-shadow:         0px 0px 4px 0px #ccc;
		display: inline-block;
		
		a {	line-height: 70px; font-size: .9em; color: #808080; padding: 0 5px; display: block; } 
		a:hover { color: #42413f; }
	}
}

/* BEGIN FACEBOOK */

#social_comments { }
p#social_comment { 
	top: 120px; left: 5px; 
	font-weight: 100;
	font-family:Arial, Helvetica, sans-serif;
	color: #434343;
}

ul#socials {
	margin-top: 25px;
	width: 600px;
	height: 40px;
	display: none;

	li {
		width: 28px;
		height: 28px;
		list-style-type: none;
		display: inline-block;
		cursor: pointer;
		margin-right: 7px;
		background-image: url(<%= asset_path 'profile_pics.png' %>);
		background-repeat: no-repeat;
	} 
	li:hover { background-image: url(<%= asset_path 'profile_pics_hov.png' %>); background-repeat: no-repeat; }
}
/* END FACEBOOK */


div#showcase { 
	width: 950px; margin: 0 auto 100px auto; overflow: auto; 

	span {
		display: block;
		width: 100%;
		min-height: 300px;
		position: relative;
		background: url(<%= asset_path 'section_top_grad.png' %>) top center no-repeat;

		h1 {
			padding: 40px 0 0 0;
			font-size: 1.8em;
			font-family: Arial, Helvetica, sans-serif;
			font-weight: 600;
			color: #079fdf;
			text-align: center;
		}

		span.showcase_detail { 
			position: absolute; background: none; min-height: 100px; 
			
			h3 { font-size: 1.6em; }
			p { margin-top: 15px; font-size: 1em; }
		}
	}

	#concept { 
		 h1 { text-align: left; padding-top: 30px; width: 41%; }
		 p { padding-bottom: 30px; color:#4C0927; line-height: 1.5em; width: 41%; }
	}

}


div.configs {
	display: inline-block; margin-bottom: 20px;

	a { 
		display: inline-block; 
		margin-right: 10px; 
		height: 50px; 
		width: 160px; 
		border: 1px solid #999; 
		clear: none; 
	}

}


