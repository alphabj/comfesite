@charset "UTF-8";
/* About Section */

#header h1
{
width: 750px;
text-align: center;
margin: 50px auto 0 auto;
padding-bottom: 20px;
background: url(<%= asset_path 'h_btm_rpt.png' %>) bottom left repeat-x;
color: #373633;
font-size: 3em;
}

#bigpicture { margin: 0 auto; width: 1000px; height: 600px; }
#bigpicture span 
{
text-align: center;
display: block;
width: 542px;
overflow: auto;
margin: 0 auto;
z-index: 2;
position: relative;
bottom: 130px;
}
#bigpicture span a
{
float: left;
background: #efefe8;
border: #ffffff 6px solid;
border-radius: 5px;
margin: 5px 65px 5px 0;
width: 115px;
height: 70px;
/*-moz-box-shadow:    0px 0px 4px 0px #ccc;
-webkit-box-shadow: 0px 0px 4px 0px #ccc;
box-shadow:         0px 0px 4px 0px #ccc;*/
line-height: 70px;
font-size: .9em;
color: #808080;
padding: 0 5px;
display: block;
opacity: .7;
}
#bigpicture span a:hover { color: #42413f; opacity: .9; }

img.carousel 
{
display: none;
margin: 0 auto;
z-index: 0;
border-radius: 5px;
margin-top: 5px;
}

#slideshow { margin: -60px auto 80px auto; }

.informatic h3
{
color: #61b6da;
padding-left: 30px;
font-size: 2em;
font-weight: 500;
margin-top: 25px;
}

div.informatic { background: none; margin-bottom: 0; } 

.stacked ul { list-style-type: none; margin: 40px 0; overflow:auto; }
.stacked ul li
{
margin-right: 40px;
display: block;
float: left; 
width: 96px;
text-align: center;
}
.stacked ul li img { border: 6px solid #61b6da; border-radius: 5px; }